{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "no-restricted-globals": 1,
    "no-param-reassign": 1,
    "linebreak-style": 0,
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  },
  "globals": {
    "document": true,
    "window": true,
    "require": true,
    "pageYOffset": true,
    "fetch": false
  }
}
